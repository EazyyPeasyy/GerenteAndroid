<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_recycledemo_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="Nome"
        android:textSize="25sp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_recycledemo_type"
        />

    <TextView
        android:id="@+id/item_recycledemo_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="Tipo"
        android:textSize="25sp"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_recycledemo_name"
        app:layout_constraintRight_toLeftOf="@id/item_recycledemo_date"
        />

    <TextView
        android:id="@+id/item_recycledemo_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="Data"
        android:textSize="25sp"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_recycledemo_type"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/item_recycledemo_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:text="Valor: R$"

        android:textSize="35sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_recycledemo_name" />

    <View
        android:layout_width="0dp"
        android:layout_height="3dp"

        android:background="#000"
        android:layout_margin="10dp"

        app:layout_constraintTop_toBottomOf="@id/item_recycledemo_value"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>